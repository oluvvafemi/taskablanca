= form_with model: organization, html: { class: "needs-validation" } do |form|
  .mb-3
    = form.label :name, class: "form-label"
    = form.text_field :name, required: true, autofocus: true, placeholder: "Acme Inc.", class: "form-control"
    - if organization.errors[:name].any?
      .invalid-feedback.d-block= organization.errors[:name].first
    - if organization.new_record?
      %small.form-text.text-muted You'll be the owner of this organization

  .d-flex.justify-content-between.align-items-center
    = link_to "Cancel", organization.new_record? ? organizations_path : organization, class: "btn btn-outline-secondary"
    = form.submit organization.new_record? ? "Create Organization" : "Update Organization", class: "btn btn-dark"

