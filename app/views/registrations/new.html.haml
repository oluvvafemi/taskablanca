.w-100
  .row.justify-content-center
    .col-12.col-sm-11.col-md-9.col-lg-7.col-xl-5
      .card.shadow-sm
        .card-body.p-4
          %h1.h4.mb-4 Create your account
          - if flash[:alert]
            .alert.alert-danger= flash[:alert]
          - if flash[:notice]
            .alert.alert-success= flash[:notice]
          = form_with model: @user, url: registration_path, html: { class: "needs-validation" } do |form|
            .mb-3
              = form.label :name, class: "form-label"
              = form.text_field :name, required: true, autofocus: true, placeholder: "Your name", class: "form-control"
              - if @user.errors[:name].any?
                .invalid-feedback.d-block= @user.errors[:name].first
            .mb-3
              = form.label :email_address, class: "form-label"
              = form.email_field :email_address, required: true, autocomplete: "username", placeholder: "name@example.com", class: "form-control"
              - if @user.errors[:email_address].any?
                .invalid-feedback.d-block= @user.errors[:email_address].first
            .mb-3
              = form.label :password, class: "form-label"
              = form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Choose a password", maxlength: 72, class: "form-control"
              - if @user.errors[:password].any?
                .invalid-feedback.d-block= @user.errors[:password].first
            .mb-3
              = form.label :password_confirmation, "Confirm password", class: "form-label"
              = form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72, class: "form-control"
              - if @user.errors[:password_confirmation].any?
                .invalid-feedback.d-block= @user.errors[:password_confirmation].first
            .d-flex.justify-content-between.align-items-center
              = link_to "Already have an account?", new_session_path, class: "small text-muted-link"
              = form.submit "Create account", class: "btn btn-dark"

