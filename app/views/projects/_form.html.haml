= form_with(model: project, local: true, class: "needs-validation") do |f|
  - if project.errors.any?
    .alert.alert-danger.alert-dismissible.fade.show{ role: "alert" }
      %h5.alert-heading Oops! There were some errors:
      %ul.mb-0
        - project.errors.full_messages.each do |message|
          %li= message
      %button.btn-close{ type: "button", "data-bs-dismiss": "alert", "aria-label": "Close" }

  .mb-3
    = f.label :title, class: "form-label"
    = f.text_field :title, class: "form-control", placeholder: "Enter project title", required: true, autofocus: true

  .mb-3
    = f.label :description, class: "form-label"
    = f.text_area :description, class: "form-control", rows: 4, placeholder: "Enter project description"

  .d-flex.gap-2
    = f.submit class: "btn btn-dark"
    = link_to "Cancel", projects_path, class: "btn btn-outline-secondary"

