.w-100
  .row.justify-content-center
    .col-12.col-sm-11.col-md-9.col-lg-7.col-xl-5
      .card.shadow-sm
        .card-body.p-4
          %h1.h4.mb-4 Sign in
          - if flash[:alert]
            .alert.alert-danger= flash[:alert]
          - if flash[:notice]
            .alert.alert-success= flash[:notice]
          = form_with url: session_path, html: { class: "needs-validation" } do |form|
            .mb-3
              = form.label :email_address, class: "form-label"
              = form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "name@example.com", value: params[:email_address], class: "form-control"
            .mb-3
              = form.label :password, class: "form-label"
              = form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "form-control"
            .d-flex.justify-content-between.align-items-center
              = link_to "Forgot password?", new_password_path, class: "small text-muted-link"
              = form.submit "Sign in", class: "btn btn-dark"
