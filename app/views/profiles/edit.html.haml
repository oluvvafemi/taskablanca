.d-flex.justify-content-between.align-items-center.mb-4
  .d-flex.align-items-center
    = link_to profile_path, class: "btn btn-outline-secondary btn-sm me-3" do
      %i.bi.bi-arrow-left
    %h1.h3.mb-1 Edit Profile

.card.shadow-sm
  .card-body
    = form_with model: @user, url: profile_path, method: :patch, local: true, class: "needs-validation", novalidate: true do |form|
      .row.g-3
        .col-12.col-md-6
          = form.label :name, class: "form-label fw-semibold"
          = form.text_field :name, class: "form-control #{'is-invalid' if @user.errors[:name].any?}", required: true
          - if @user.errors[:name].any?
            .invalid-feedback.d-block
              = @user.errors[:name].first
        .col-12.col-md-6
          = form.label :email_address, "Email Address", class: "form-label fw-semibold"
          = form.email_field :email_address, class: "form-control #{'is-invalid' if @user.errors[:email_address].any?}", required: true
          - if @user.errors[:email_address].any?
            .invalid-feedback.d-block
              = @user.errors[:email_address].first
      .d-flex.gap-2.mt-4
        = form.submit "Update Profile", class: "btn btn-dark"
        = link_to "Cancel", profile_path, class: "btn btn-outline-secondary"
